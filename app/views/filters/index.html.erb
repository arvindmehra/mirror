<h1>List of Filters</h1>
<ol class="breadcrumb"><li class="false"><a class="pjax" href="/admin/">Dashboard</a></li>
  <li class="active">Filters</li>
</ol>
<ul class="nav nav-tabs">
  <li title="" rel="" class="icon index_collection_link active">
    <a class="pjax" href="/admin/device">
      <i class="icon-th-list"></i>
      <span>List</span>
    </a>
  </li>
  <li title="" rel="" class="icon new_collection_link ">
    <%= link_to ("<i class='icon-plus'></i> Add New").html_safe, new_filter_path %>
  </li>
</ul>
<div id="list">
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <col width="300">
        <th class="header pjax  user_field belongs_to_association_type" title="" data-original-title="">Name</th>

        <th class="header platform_field string_type">Type</th>
        <th class="header created_at_field datetime_type" >Segment</th>

        <th class="header vendor_id_field string_type">Operator</th>
        <th class="header vendor_id_field string_type">Condition</th>
        <th class="header vendor_id_field string_type">Free Text</th>
        <th class="header vendor_id_field string_type">Start Date</th>
        <th class="header vendor_id_field string_type">End Date</th>
        <th class="header vendor_id_field string_type">Action</th>
      </tr>
  </thead>
  <tbody>
    <% if @filters.present? %>
      <% @filters.each do |filter| %>
        <tr class="device_row">
          <td class="vendor_id_field string_type" find_by(id: ><%= link_to filter.name.try(:titleize), filter_path(filter) %></td>
          <td class="created_at_field datetime_type" title="February 26, 2016 11:41"><%=filter.filter_type %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.segment %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.operator %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.condition %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.free_text %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.start_date.try(:to_date) %></td>
          <td class="updated_at_field datetime_type" title="March 30, 2016 06:59"><%=filter.end_date.try(:to_date) %></td>
          <td class="vendor_id_field string_type" ><%= link_to "Delete", filter_path(filter),{method: :delete, class: "btn btn-danger"} %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
