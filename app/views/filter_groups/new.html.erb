<button id="add1">Add More</button>
<button id="remove1">Remove</button>
<button id="add2" style="display: none">Add More</button>
<button id="remove2" style="display: none">Remove</button>
<button id="add3" style="display: none">Add More</button>
<button id="remove3" style="display: none">Remove</button>


<script type="text/javascript">
  $(document).ready(function(){
      
      $("#remove1").click(function(){
          $("#add1").show();
          $("#remove1").show();
          $("#group_maker_3").hide();
          $("#remove2").hide();
          $("#add3").hide();
          $("#remove3").hide();
          $("#group_maker_1").hide();
      });
      $("#add1").click(function(){
          $("#group_maker_1").show();
          $("#add1").hide();
          $("#remove1").hide();
          $("#add2").show();
          $("#remove2").show();
          $("#add3").hide();
          $("#remove3").hide();
      });

      $("#remove2").click(function(){
          $("#add1").show();
          $("#remove1").show();
          $("#add2").hide();
          $("#remove2").hide();
          $("#add3").hide();
          $("#remove3").hide();
          $("#group_maker_2").hide();
      });
      $("#add2").click(function(){
          $("#group_maker_2").show();
          $("#group_maker_1").show();
          $("#add1").hide();
          $("#remove1").hide();
          $("#add2").hide();
          $("#remove2").hide();
          $("#add3").show();
          $("#remove3").show();
      });

      $("#remove3").click(function(){
          $("#add2").show();
          $("#remove2").show();
          $("#group_maker_3").hide();
          $("#add1").hide();
          $("#remove1").hide();
          $("#add3").hide();
          $("#remove3").hide();
      });
      $("#add3").click(function(){
          $("#group_maker_3").show();
      });
  });
</script>



