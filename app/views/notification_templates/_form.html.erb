    <div class="col-sm-6 controls">
      <%= f.select :cta_key,options_for_select(NotificationTemplate::CTA.invert.to_a), class: "form-control" %><br />
    </div>
  </div>
  
<!-- primary cta key fields -->

  <div class="form-group control-group belongs_to_association_type user_field col-sm-12" style="display: none" id ="id_chat">
    <%= f.label :chat_email, class: "col-sm-3 control-label" %>
    <div class="col-sm-6 controls">
