    <div class="form-group control-group belongs_to_association_type user_field col-sm-12" style="display: none" id ="secondary_id_learn_more">
      <%= f.label :secondary_learn_more_url, class: "col-sm-3 control-label" %>
      <div class="col-sm-6 controls">
        <%= f.text_field :secondary_learn_more_url, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group control-group belongs_to_association_type user_field col-sm-12" style="display: none" id ="secondary_id_take_the_survey">
      <%= f.label :secondary_take_the_survey_url, class: "col-sm-3 control-label" %>
      <div class="col-sm-6 controls">
        <%= f.text_field :secondary_take_the_survey_url, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group control-group belongs_to_association_type user_field col-sm-12" style="display: none" id ="secondary_id_anonymous_feedback">
      <%= f.label :secondary_anonymous_feedback_url, class: "col-sm-3 control-label" %>
      <div class="col-sm-6 controls">
        <%= f.text_field :secondary_anonymous_feedback_url, class: "form-control"  %>
      </div>
    </div>

  <!-- end  -->


